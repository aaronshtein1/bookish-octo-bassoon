{
  "name": "hhae-rpa-export-runner",
  "version": "1.0.0",
  "description": "Production RPA runner for automating report downloads from HHA Exchange",
  "type": "module",
  "main": "rpa/run.js",
  "scripts": {
    "rpa:run": "node rpa/run.js",
    "rpa:debug": "node rpa/run.js --headful",
    "rpa:codegen": "npx playwright codegen https://app.hhaexchange.com/identity/account/login",
    "install:playwright": "npx playwright install chromium"
  },
  "keywords": ["rpa", "automation", "playwright", "healthcare", "reporting"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.40.1",
    "@azure/msal-node": "^2.6.0",
    "dotenv": "^16.3.1",
    "imap": "^0.8.19",
    "js-yaml": "^4.1.0",
    "mailparser": "^3.6.5",
    "node-fetch": "^3.3.2",
    "winston": "^3.11.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
